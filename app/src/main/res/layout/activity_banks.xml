<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.BanksActivity">

    <TextView
        android:id="@+id/txtSelectBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Select Your Bank"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/txtNotice"
        android:layout_below="@id/txtSelectBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select the all account, that bank account you are having and you want the information of it."
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"/>

    <ListView
        android:id="@+id/lvBankNames"
        android:layout_below="@id/txtNotice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>